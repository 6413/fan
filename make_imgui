# compiler settings
CXX = clang++

FLAGS =
CXXFLAGS = -std=c++2a -w $(FLAGS) -I C:\Users\0b347\Documents\GitHub -MD -I include

IMGUI_PATH =
OUTPUT_PATH = lib/fan/

ROOT_PATH = ./include/fan/

DEBUG_FLAGS = -gdwarf-4
RELEASE_FLAGS = -O3

OUT_FILE_FORMAT =

INCLUDES =
ifeq ($(OS),Windows_NT)
	IMGUI_PATH += $(ROOT_PATH)imgui/
	OUT_FILE_FORMAT+=lib
else
	IMGUI_PATH += $(ROOT_PATH)imgui/
	OUT_FILE_FORMAT+=a
endif

CXXFLAGS += -I $(ROOT_PATH)../

#note
CXXFLAGS += $(RELEASE_FLAGS)

CXXFLAGS += -DIMGUI_IMPL_OPENGL_LOADER_CUSTOM
CXXFLAGS += -DIMGUI_DEFINE_MATH_OPERATORS
#CXXFLAGS += -DIMGUI_DISABLE_DEBUG_TOOLS -DIMGUI_DISABLE_SSE -DSTBI_NO_SIMD

%.o: %.cpp
	$(CXX) $(CXXFLAGS) $(INCLUDES) -c $< -o $@

# source files and output
IMGUI_SRC = $(wildcard $(IMGUI_PATH)*.cpp)
IMGUI_OBJ = $(IMGUI_SRC:.cpp=.o)
IMGUI_LIB = libimgui.$(OUT_FILE_FORMAT)

$(IMGUI_LIB): $(IMGUI_OBJ)
	llvm-ar rcs $(OUTPUT_PATH)$@ $^

clean:
ifeq ($(OS),Windows_NT)
	del $(IMGUI_PATH)*.o
	del $(IMGUI_LIB)
else
	rm $(IMGUI_PATH)*.o
endif
