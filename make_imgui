#llvm-lib /OUT:library.lib libimgui.a     
GPP = clang++ -w
CFLAGS = -I . -std=c++2a -I include

IMGUI_LIB = libimgui.a

FAN_OBJECT_FOLDER = 
IMGUI_PATH =
OUTPUT_PATH = lib/fan/

FAN_INCLUDE_PATH =

ifeq ($(OS),Windows_NT)
	FAN_INCLUDE_PATH += C:/libs/fan/include
  CFLAGS += -I C:\libs\fan\include\baseclasses -I C:/libs/fan/include/fan/imgui -I C:/libs/fan/src/libwebp -I C:/libs/fan/src/libwebp/src
	CFLAGS += -DWITCH_INCLUDE_PATH=C:/libs/WITCH
	IMGUI_PATH += include/fan/imgui/
else
	FAN_INCLUDE_PATH += /usr/include/
	CFLAGS += -I /usr/include/fan/imgui
	CFLAGS += -DWITCH_INCLUDE_PATH=/usr/include/WITCH
	IMGUI_PATH += /usr/include/fan/imgui/
endif

CFLAGS += -DFAN_INCLUDE_PATH=$(FAN_INCLUDE_PATH) 

IMGUI_SRC = $(wildcard $(IMGUI_PATH)*.cpp)
IMGUI_OBJ = $(IMGUI_SRC:.cpp=.o)

PCH_NAME = pch.h
CFLAGS += -Dfan_pch=\"$(FAN_INCLUDE_PATH)fan/$(PCH_NAME)\"

$(IMGUI_LIB): $(IMGUI_OBJ)
	llvm-ar rcs $(OUTPUT_PATH)$@ $^

%.o: %.cpp
	$(GPP) $(CFLAGS) -c -s -O3 -march=native -mtune=native $< -o $@

clean:
ifeq ($(OS),Windows_NT)
	del include\fan\imgui\*.o
	del libimgui.a
else
	rm /usr/include/fan/imgui/*.o
endif