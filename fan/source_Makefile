GPP = clang++

CFLAGS = -std=c++2a -I /usr/local/include -I include -g #-O3 -march=native -mtune=native
MAINFLAGS = -L /usr/local/lib -lGL -lGLEW -lX11 -lXrandr -lassimp -lavcodec -lavutil -lavformat -lswscale -lbox2d -lvulkan

MAIN = Source.cpp

TARGET = a.out

FAN_OBJECT_FOLDER = /usr/src/fan/graphics/opengl/

default : $(TARGET)

LIBS = $(FAN_OBJECT_FOLDER)fan_window.o $(FAN_OBJECT_FOLDER)fan_window_input.o $(FAN_OBJECT_FOLDER)fan_camera.o $(FAN_OBJECT_FOLDER)fan_gl_graphics.o $(FAN_OBJECT_FOLDER)fan_gl_gui.o $(FAN_OBJECT_FOLDER)fan_vk_graphics.o $(FAN_OBJECT_FOLDER)fan_vk_gui.o

$(TARGET): fan_main.o $(LIBS)
	$(GPP) $(CFLAGS) $(MAINFLAGS) fan_main.o $(LIBS)
	
fan_main.o:	$(MAIN)
	$(GPP) $(CFLAGS) -c $(MAIN) -o fan_main.o

clean:
	rm -f fan_main.o
