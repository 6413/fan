#release
GPP = clang++
#debug for address sanitizer
#GPP = clang-cl /MT -fsanitize=address  /std:c++latest


CFLAGS =  -g -std=c++2a -I include -I C:/libs/fan/src/libwebp -I C:/libs/fan/src/libwebp/src #-O3 -march=native -mtune=native \
  #-fsanitize=address -fno-omit-frame-pointer

MAIN = examples/rectangle.cpp

TARGET = a.out

FAN_OBJECT_FOLDER = 

LIBS =

ifeq ($(OS),Windows_NT)
  FAN_OBJECT_FOLDER += lib/fan/

  CFLAGS += $(FAN_OBJECT_FOLDER)fan_windows_clang.a
else
  FAN_OBJECT_FOLDER += /usr/src/fan/graphics/opengl/
  MAINFLAGS += -lX11 -lXrandr -L /usr/local/lib
  CFLAGS += -I /usr/local/include
endif

default : $(TARGET)

$(TARGET): fan_main.o
	$(GPP) $(CFLAGS) $(MAINFLAGS) fan_main.o
	
fan_main.o:	$(MAIN)
	$(GPP) $(CFLAGS) -c $(MAIN) -o fan_main.o

clean:
	rm -f fan_main.o
