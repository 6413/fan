#release
GPP = clang++
#debug for address sanitizer
#GPP = clang-cl /MT -fsanitize=address  /std:c++latest


CFLAGS =  -w -g -std=c++2a -I include #-O3 -march=native -mtune=native \
  #-fsanitize=address -fno-omit-frame-pointer

MAIN = examples/helloworld.cpp

TARGET = a.out

FAN_OBJECT_FOLDER = 

LIBS =

BASE_PATH = 

ifeq ($(OS),Windows_NT)
  BASE_PATH += lib/fan/
    #                        magic - replace / with \ thanks to windows
  FAN_OBJECT_FOLDER = $(subst /,\,$(BASE_PATH))

  CFLAGS += $(FAN_OBJECT_FOLDER)fan_windows_clang.a
  CFLAGS += -I C:/libs/fan/src/libwebp -I C:/libs/fan/src/libwebp/src C:/libs/fan/lib/libwebp/libwebp.a C:/libs/fan/lib/opus/libopus.a
else
  BASE_PATH += lib/fan/
  FAN_OBJECT_FOLDER += $(BASE_PATH)
  CFLAGS += -I /usr/local/include -lX11 -lXrandr -L /usr/local/lib -lopus -lGL -lwebp -ldl $(FAN_OBJECT_FOLDER)fan.a
  CFLAGS += -DFAN_INCLUDE_PATH=/mnt/c/libs/fan/include
endif


default : $(TARGET)

$(TARGET): fan_main.o
	$(GPP) $(CFLAGS) $(MAINFLAGS) $(FAN_OBJECT_FOLDER)fan_main.o
	
fan_main.o:	$(MAIN)
	$(GPP) $(CFLAGS) -c $(MAIN) -o $(FAN_OBJECT_FOLDER)fan_main.o

clean:
	rm -f $(FAN_OBJECT_FOLDER)fan_main.o
