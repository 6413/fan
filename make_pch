GPP = clang++ -I C:\libs -Dstage_loader_path=. -I include/nvidia -I .

CFLAGS = -ferror-limit=3 -w -I .  -std=c++2a -I include #-O3 -march=native -mtune=native \
	#-fsanitize=address -fno-omit-frame-pointer

FAN_OBJECT_FOLDER = 

FAN_INCLUDE_PATH = 

FAN_LIB =

ifeq ($(OS),Windows_NT)
	FAN_INCLUDE_PATH += C:/libs/fan/include
	FAN_LIB += fan_windows_clang
  CFLAGS += -I C:/libs/fan/src/libwebp -I C:/libs/fan/src/libwebp/src -I ..
	CFLAGS += -DWITCH_INCLUDE_PATH=C:/libs/WITCH
else
	FAN_INCLUDE_PATH += /usr/include/
	CFLAGS += -I /usr/local/include
	FAN_LIB += fan
	CFLAGS += -DWITCH_INCLUDE_PATH=/usr/include/WITCH
endif

CFLAGS += -DFAN_INCLUDE_PATH=$(FAN_INCLUDE_PATH)

CFLAGS += -Dfan_build_pch

PCH_NAME = pch.h
CFLAGS += -Dfan_pch=\"$(FAN_INCLUDE_PATH)fan/$(PCH_NAME)\"

MAIN = $(FAN_INCLUDE_PATH)fan/$(PCH_NAME)

debug:
	$(GPP) $(CFLAGS) -x c++-header $(MAIN) -o lib/fan/pch.h.gch

release:
	$(GPP) $(CFLAGS) -s -O3 -march=native -mtune=native -x c++-header $(MAIN) -o lib/fan/pch.h.gch

clean:
	rm -f a.out
